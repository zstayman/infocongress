<div class="indiv-elected">
  <%= link_to("#{elected.first_name} #{elected.last_name} (#{elected.party.upcase}-#{elected.state})", elected_path(elected.id)) %>
  <%if File.exists?(Rails.root.join("app","assets","images","headshots","#{elected.biography}.jpg")) %>
  <%= link_to (image_tag "headshots/#{elected.biography}.jpg"), elected_path(elected.id) %>
  <% else %>
  <div class="img-placeholder"><p>NO PICTURE AVAILABLE</p></div>
  <% end %>
  <button class="follow" value=<%= elected.id %>>
    <% if current_user.electeds.include?(elected) %>
    Unfollow
    <% else %>
    Follow
    <% end %>
  </button>
</div>

